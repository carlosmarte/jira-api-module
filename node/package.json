{
  "name": "jira-api-module",
  "version": "1.0.0",
  "description": "Jira Software Data Center REST API Module",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "jira-fetcher"
  ],
  "scripts": {
    "generate-api-docs": "node --loader ts-node/esm .bin/generate-api-docs.ts",
    "build": "npm run build:all",
    "build:fetcher": "npm run build --workspace=jira-fetcher",
    "clean:fetcher": "npm run clean --workspace=jira-fetcher",
    "build:all": "npm run build:fetcher",
    "test": "npm test --workspace=jira-fetcher",
    "test:watch": "npm run test:watch --workspace=jira-fetcher",
    "test:coverage": "npm run test:coverage --workspace=jira-fetcher",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build:all && changeset publish"
  },
  "keywords": [
    "jira",
    "api",
    "rest",
    "data-center"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  }
}
